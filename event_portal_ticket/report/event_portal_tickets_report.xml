<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="event_portal_ticket_report" model="ir.actions.report">
        <field name="name">Event Portal Report Ticket</field>
        <field name="model">event.event</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">event_portal_ticket.report_event_attendees</field>
        <field name="report_file">event_portal_ticket.report_event_attendees</field>
        <field name="binding_type">report</field>
    </record>

    <template id="report_event_attendees">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <t t-call="event_portal_ticket.report_event_document"/>
            </t>
        </t>
    </template>


    <template id="report_event_document">
        <t t-call="web.html_container">
            <t t-call="event_portal_ticket.content"/>
        </t>
    </template>
</odoo>