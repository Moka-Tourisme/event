<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="event_portal_ticket_report" model="ir.rule">
            <field name="name">Event Portal Ticket Report</field>
            <field name="model_id" ref="event.model_event_registration"/>
            <field name="domain_force">[('partner_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="event_ticket_registration_rule_portal" model="ir.rule">
            <field name="name">Portal Personal Event Ticket Registration</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="domain_force">[('is_participating', '=', 'True')]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        </record>
    </data>


</odoo>