<odoo>
    <!--    List of all events for user-->
    <template id="portal_my_home" name="Show Events" customize_show="True" inherit_id="portal.portal_my_home"
              priority="60">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry" groups="base.group_portal,event.group_event_user">
                <t t-set="title">Events</t>
                <t t-set="url" t-value="'/my/events'"/>
                <t t-set="placeholder_count" t-value="'event_count'"/>
            </t>
        </xpath>
    </template>

    <!--    List of my events-->
    <template id="portal_my_events" name="My Events">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Events</t>
            </t>
            <t t-if="not events">
                <div class="alert alert-warning mt8" role="alert">
                    There are no events.
                </div>
            </t>
            <t t-if="events" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Event</th>
                        <th>Event Date</th>
                        <th>Informations</th>
                        <th class="text-right">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="events" t-as="event">
                        <td>
                            <t>
                                <a t-attf-href="/my/events/#{event.id}?{{ keep_query() }}">
                                    <span t-field="event.name"/>
                                </a>
                            </t>
                        </td>
                        <td>
                            <t>
                                <strong>
                                    <span t-field="event.date_begin" t-options='{"format": "d MMM yyyy"}'/>
                                </strong>
                                at
                                <span t-field="event.date_begin" t-options='{"format": "H:mm"}'/>
                            </t>
                        </td>
                        <td>
                            <t>
                                <t t-set="attendees" t-value="event.seats_reserved+event.seats_used"/>
                                <span class="badge rounded-pill bg-primary">
                                    <i class="fa fa-user-circle-o"></i>
                                    <span t-out="attendees"/>
                                    attendee(s)
                                </span>
                            </t>
                        </td>
                        <td class="text-right">
                            <span class="badge rounded-pill bg-info" t-field="event.stage_id.name"/>
                        </td>
                    </tr>
                </tbody>
            </t>
        </t>
    </template>

    <!--    Breadcrumb -->
    <template id="portal_layout" name="Portal layout: event menu entry" inherit_id="portal.portal_breadcrumbs"
          priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <t t-set="o_portal_fullwidth_alert">
                <t t-call="portal.portal_back_in_edit_mode"/>
            </t>
            
            <li t-if="page_name == 'events' and not page_name=='tickets'" class="breadcrumb-item">
                <a t-attf-href="/my/events?{{ keep_query() }}">Event(s)</a>
            </li>

            <!-- <li t-if="event" class="breadcrumb-item active">
                <t t-out="event.name"/>
            </li> -->
        </xpath>
    </template>



    <template id="portal_my_event" name="My Event" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert">
                <t t-call="portal.portal_back_in_edit_mode"/>
            </t>
            <div class="row mt16 o_portal_event_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="title">
                        <div class="text-center pb-2 pt-3">
                            <t t-set="attendees" t-value="event.seats_reserved+event.seats_used"/>
                            <h2 class="mb-3">
                                <i class="fa fa-user-circle-o"/>
                                <b t-out="attendees"/>
                                <br/>
                                <strong t-if="attendees &gt; 1">Attendees</strong>
                                <strong t-else="">Attendee</strong>
                            </h2>
                            <div class="row no-gutters mt-2">
                                <div t-if="event.seats_available" class="bg-100 px-2 py-2" style="width: 90%; margin: auto">
                                    <i class="fa fa-user-o px-1 py-2"/>
                                    <b t-field="event.seats_available"/>
                                    <br/>
                                    <small t-if="event.seats_available &gt; 1">Remaining seats</small>
                                    <small t-else="">Remaining seat</small>
                                </div>
                                <div t-else="" class="bg-100 px-2 py-2"  style="width: 90%; margin: auto">
                                    <i class="fa fa-user-o px-1 py-2"/>
                                    âˆž
                                    <br/>
                                    <small>Unlimited seats</small>
                                </div>
                            </div>
                            <div class="row no-gutters mt-1">
                                <div t-if="event.seats_reserved" class="col-6">
                                    <div class="bg-100 px-2 py-2 mr-1">
                                        <i class="fa fa-user-secret px-1 py-2"/>
                                        <b t-field="event.seats_reserved"/>
                                        <br/>
                                        <small t-if="event.seats_reserved &gt; 1">Confirmed</small>
                                        <small t-else="">Confirmed</small>
                                    </div>
                                </div>
                                <div t-if="event.seats_used" class="col-6">
                                    <div class="bg-100 px-2 py-2">
                                        <i class="fa fa-user-plus px-1 py-2"/>
                                        <b t-field="event.seats_used"/>
                                        <br/>
                                        <small t-if="event.seats_available &gt; 1">Attended</small>
                                        <small t-else="">Attended</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn"
                                           title="Download"
                                           t-attf-href="/report/pdf/event_portal.report_event_attendees/#{event.id}"
                                           download="">
                                            <i class="fa fa-download"/>
                                            Download
                                        </a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1" t-attf-style="margin-left: 4px">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_event_print"
                                           id="print_event_report" title="Print"
                                           t-attf-href="/report/pdf/event_portal.report_event_attendees/#{event.id}"
                                           target="_blank">
                                            <i class="fa fa-print"/>
                                            Print
                                        </a>
                                    </div>
                                </div>
                            </li>
                            <li t-if="event.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1">
                                    <strong class="text-muted">
                                        <t>
                                            Organizer
                                        </t>
                                    </strong>
                                </div>
                                <div class="row">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mt-1 o_portal_contact_img"
                                             t-att-src="image_data_uri(event.organizer_id.avatar_1024)"
                                             alt="Contact"/>
                                    </div>
                                    <div class="col pl-0 d-flex align-items-center">
                                        <t t-out="event.organizer_id.name"/>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>
                <!-- Page Content -->
                <div id="event_content" class="col-12 col-lg">
                        <div>
                            <t>
                                <t t-set="docs" t-value="event"/>
                                <t t-foreach="docs" t-as="o">
                                    <h2>
                                        <t>
                                            <a t-attf-href="/my/tickets/event/#{event.id}">
                                                <span t-field="event.name"/>
                                            </a>
                                        </t>
                                    </h2>
                                    <hr/>
                                    <div class="row mt-5" id="informations">
                                        <div t-if="o.date_begin" class="col-auto col-3 mw-100 mb-2">
                                            <strong>Start Date:</strong>
                                            <p class="m-0" t-field="o.date_begin"/>
                                        </div>

                                        <div t-if="o.date_end" class="col-auto col-3 mw-100 mb-2" name="end_date">
                                            <strong>End date:</strong>
                                            <p class="m-0" t-field="o.date_end"/>
                                        </div>
                                        <t groups="event.group_event_user">
                                            <div t-if="o.organizer_id.name" class="col-auto col-3 mw-100 mb-2">
                                                <strong>Organizer:</strong>
                                                <p class="m-0" t-field="o.organizer_id.name"/>
                                            </div>
                                            <div t-if="o.user_id.name" class="col-auto col-3 mw-100 mb-2">
                                                <strong>Responsible:</strong>
                                                <p class="m-0" t-field="o.user_id.name"/>
                                            </div>
                                        </t>
                                    </div>
                                    <t t-if="o.seats_expected &gt; 0">
                                        <div id="attendees" class="pt16">
                                            <table class="table table-sm o_main_table" name="attendee_line_table">
                                                <thead>
                                                    <tr>
                                                        <th name="th_name" class="text-left">
                                                            <span>Name</span>
                                                        </th>
                                                        <th name="th_phone" class="text-left">
                                                            <span>Phone Number</span>
                                                        </th>
                                                        <th name="th_inscription_date" class="text-left">
                                                            <span>Inscription Date</span>
                                                        </th>
                                                        <th name="th_inscription_state" class="text-left">
                                                            <span>State</span>
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody class="attendees_tbody">
                                                    <t t-foreach="o.registration_ids" t-as="attendee">
                                                        <t t-if="attendee.state == 'open' or attendee.state == 'done'">
                                                            <tr>
                                                                <td name="event_attendee_line_name">
                                                                    <span t-field="attendee.name" t-options="{'widget': 'text'}"/>
                                                                </td>
                                                                <td name="event_attendee_line_phone">
                                                                    <span t-field="attendee.phone" t-options="{'widget': 'text'}"/>
                                                                </td>
                                                                <td name="event_attendee_line_inscription_date">
                                                                    <span t-field="attendee.create_date"
                                                                        t-field-options="{&quot;format&quot;: &quot;d MMMM y&quot;}"/>
                                                                </td>
                                                                <td name="event_attendee_line_inscription_state">
                                                                    <span t-field="attendee.state"/>
                                                                </td>
                                                            </tr>
                                                        </t>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </t>
                                </t>
                                <t t-if="o.seats_expected == 0">
                                    <div class="s_alert w-100 clearfix alert-info s_alert_md" data-snippet="s_alert" data-name="Alert">
                                        <i class="fa fa-2x s_alert_icon fa-info-circle"/>
                                        <div class="s_alert_content">
                                            <p>
                                                <strong>There is no registration at the moment.</strong>
                                                <br/>
                                                As soon as the first participant has registered, they will appear on this page.
                                            </p>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                    <!-- chatter -->
                    <div id="event_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="event"/>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="content" name="My Content">
        
    </template>
</odoo>
