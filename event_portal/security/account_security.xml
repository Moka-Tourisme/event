<odoo>
    <data>
        <!-- Portal for event event -->
        <record id="event_registration_rule_portal" model="ir.rule">
            <field name="name">Portal Personal Event Registration</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="groups" eval="[(4, ref('event.group_event_user'))]"/>
        </record>

        <record id="event_registration_rule_admin" model="ir.rule">
            <field name="name">Admin Event Access</field>
            <field name="model_id" ref="event.model_event_event"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('event.group_event_manager'))]"/>
        </record>
    </data>
</odoo>

