<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    List of my events with sessions -->
    <template id="portal_my_events_sessions" name="Show Event Sessions" inherit_id="event_portal.portal_my_events">
        <xpath expr="//tbody" position="replace">
            <tbody>
                <tr t-foreach="events.filtered(lambda e: e.use_sessions)" t-as="event">
                    <td>
                        <a t-attf-href="/my/event/sessions/#{event.id}?{{ keep_query() }}">
                            <span t-field="event.name"/>
                        </a>
                    </td>
                    <td>
                        
                    </td>
                    <td>
                        <span class="badge rounded-pill bg-primary">
                            <i class="fa fa-calendar"></i>
                            <span t-field="event.session_count"/>
                            session(s)
                        </span>
                    </td>
                    <td class="text-right">
                        <span class="badge rounded-pill bg-info" t-field="event.stage_id.name"/>
                    </td>
                </tr>
                 <tr t-foreach="events.filtered(lambda e: e.use_sessions == False)" t-as="event">
                        <td>
                            <t>
                                <a t-attf-href="/my/events/#{event.id}?{{ keep_query() }}">
                                    <span t-field="event.name"/>
                                </a>
                            </t>
                        </td>
                        <td>
                            <t>
                                <strong>
                                    <span t-field="event.date_begin" t-options='{"format": "d MMM yyyy"}'/>
                                </strong>
                                at
                                <span t-field="event.date_begin" t-options='{"format": "H:mm"}'/>
                            </t>
                        </td>
                        <td>
                            <t>
                                <t t-set="attendees" t-value="event.seats_reserved+event.seats_used"/>
                                <span class="badge rounded-pill bg-primary">
                                    <i class="fa fa-user-circle-o"></i>
                                    <span t-out="attendees"/>
                                    attendee(s)
                                </span>
                            </t>
                        </td>
                        <td class="text-right">
                            <span class="badge rounded-pill bg-info" t-field="event.stage_id.name"/>
                        </td>
                    </tr>
            </tbody>
        </xpath>
    </template>

    
    <template id="portal_my_event_sessions" name="My Event Sessions" inherit_id="event_portal.portal_my_event">
        <xpath expr="//div[@id='event_content']/div" position="replace">
            <t t-if="event.use_sessions">
                <div class="o_portal_html_view shadow p-3">
                    <div>
                        <t t-call="event_portal.content">
                            <t t-set="docs" t-value="event"/>
                        </t>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
