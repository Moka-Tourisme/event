<odoo>

    <template id="events_list" inherit_id="website_event.events_list">
        <!-- Hide the date circle for event with sessions -->
        <xpath
            expr="//article//header//div[hasclass('o_wevent_event_date')]"
            position="attributes"
        >
            <attribute name="t-if" separator=" and " add="not event.use_sessions" />
        </xpath>
        <!-- Replace the event date with multiple sessions legend -->
        <xpath
            expr="//article//main//time[@itemprop='startDate']"
            position="attributes"
        >
            <attribute name="t-if" separator=" and " add="not event.use_sessions" />
        </xpath>
    </template>

</odoo>
