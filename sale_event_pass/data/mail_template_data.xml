<?xml version="1.0" ?>
<odoo>
    <record id="mail_template_pass" model="mail.template">
        <field name="name">Pass: Send by Email</field>
        <field name="model_id" ref="event_pass.model_event_pass_line"/>
        <field name="subject">Your Pass</field>
        <field name="partner_to">{{ object.partner_id.id or object.buy_line_id.order_id.partner_id.id }}</field>
        <field name="body_html" type="html">
            <div>
                Dear <t t-out="object.buy_line_id.order_id.partner_id.name or ''">Oscar Morgan</t>,
                <br/>
                Thank you for your order.
                <br/>
                Here is your pass.
                <br/>
                If you have any questions, please let us know.
                <br/>
                <br/>
                Thank you,
            </div>
        </field>
        <field name="report_template" ref="event_pass.invitation_report"/>
        <field name="report_name">Pass_{{ (object.buy_line_id.order_id.partner_id.name).replace(" ", "_") }}</field>
    </record>
</odoo>
