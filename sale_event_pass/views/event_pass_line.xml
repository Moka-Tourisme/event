<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="event_pass_line_sale_inherit" model="ir.ui.view">
            <field name="name">view.event.pass.line.sale.inherited</field>
            <field name="model">event.pass.line</field>
            <field name="inherit_id" ref="event_pass.view_pass_form"/>
            <field name="groups_id" eval="[(5,)]"/>
            <field name="priority" eval="6"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <field name="currency_id" invisible="1"/>
                    <button class="oe_stat_button" type="object" name="action_view_sale_order"
                            groups="sales_team.group_sale_salesman" icon="fa-usd"
                            attrs="{'invisible': [('sale_order_count','=', 0)]}">
                        <field string="Sales" name="sale_order_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>