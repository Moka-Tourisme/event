<?xml version="1.0" ?>
<odoo>
    <record id="view_event_registration_form" model="ir.ui.view">
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_form"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="pass_line_id"/>
            </field>
        </field>
    </record>
    <record id="view_event_registration_tree" model="ir.ui.view">
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_event_registration_tree"/>
        <field name="arch" type="xml">
            <field name="mobile" position="after">
                <field name="pass_line_id" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_registration_search_inherit" model="ir.ui.view">
        <field name="model">event.registration</field>
        <field name="inherit_id" ref="event.view_registration_search"/>
        <field name="arch" type="xml">
            <group position="inside">
                <filter string="Pass Line" name="filter_pass_line_id" domain="[]"
                    context="{'group_by':'pass_line_id'}"/>
                <filter string="Pass Type" name="filter_pass_type_id" domain="[]"
                    context="{'group_by':'pass_type_id'}"/>
            </group>
        </field>
    </record>
</odoo>
